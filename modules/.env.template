# AlphaCore Validator Environment Configuration Template
# Copy this file to .env and adjust values for your environment
# This file is used for local development; Docker Compose has its own env section

# ============================================================================
# VALIDATOR IDENTITY & METADATA
# ============================================================================
ALPHACORE_VALIDATOR_NAME=alphacore-validator
ALPHACORE_VALIDATOR_IMAGE=alphacore:latest
ALPHACORE_VALIDATOR_VERSION=0.1.0

# ============================================================================
# BITTENSOR NETWORK CONFIGURATION
# ============================================================================
ALPHACORE_TESTING=false
ALPHACORE_NETUID=1
ALPHACORE_SUBTENSOR_NETWORK=finney
# ALPHACORE_SUBTENSOR_ENDPOINT=ws://localhost:9944  # Optional, for custom endpoint

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================
ALPHACORE_WALLET_NAME=default
ALPHACORE_WALLET_HOTKEY=default

# ============================================================================
# ROUND & EPOCH CONFIGURATION
# ============================================================================
ALPHACORE_ROUND_SIZE_EPOCHS=10
ALPHACORE_ROUND_CADENCE_SECONDS=600
ALPHACORE_AVG_TASK_DURATION_SECONDS=300

# ============================================================================
# TASK GENERATION & FREQUENCY CONFIGURATION
# ============================================================================
ALPHACORE_PRE_GENERATED_TASKS=20
ALPHACORE_PROMPTS_PER_USECASE=10
ALPHACORE_TASKS_PER_ROUND=5
ALPHACORE_TASK_TIMEOUT_SECONDS=60
ALPHACORE_PROMPTS_PER_BATCH=1

# ============================================================================
# ROUND PHASE TIMING (Fraction of round for different phases)
# ============================================================================
ALPHACORE_STOP_TASK_EVALUATION_AT_ROUND_FRACTION=0.8
ALPHACORE_FETCH_IPFS_AT_ROUND_FRACTION=0.9

# ============================================================================
# BLOCK SYNCHRONIZATION
# ============================================================================
ALPHACORE_DZ_STARTING_BLOCK=0

# ============================================================================
# MINER QUERY CONFIGURATION
# ============================================================================
ALPHACORE_MAX_MINERS_TO_QUERY=50
ALPHACORE_MIN_RESPONSE_RATE=0.5
ALPHACORE_MAX_DISPATCH_PER_ROUND=64

# ============================================================================
# REWARD & SCORING CONFIGURATION
# ============================================================================
ALPHACORE_BASE_REWARD_SCORE=1.0
ALPHACORE_QUALITY_THRESHOLD=0.7
ALPHACORE_SCORE_WINDOW_SIZE=10

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
ALPHACORE_LOG_LEVEL=INFO
ALPHACORE_LOG_ROUND_SUMMARIES=true
ALPHACORE_EXPORT_ROUND_STATS=false
ALPHACORE_STATS_EXPORT_DIR=./logs/stats
ALPHACORE_VERBOSE_TASK_LOGGING=false

# ============================================================================
# HTTP ENDPOINT CONFIGURATION
# ============================================================================
ALPHACORE_ENABLE_HTTP_ENDPOINTS=true
ALPHACORE_HTTP_PORT=8000
ALPHACORE_HTTP_HOST=0.0.0.0

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
ALPHACORE_MOCK_VALIDATION=false
ALPHACORE_DEBUG_MODE=false

# ============================================================================
# FOR LOCAL TESTING ONLY
# ============================================================================
